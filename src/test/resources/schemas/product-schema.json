{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string" },
    "price": { "type": "number", "format": "float" },
    "description": { "type": "string" },
    "category": { "type": "string" },
    "image": { "type": "string", "format": "uri" }
  },
  "required": ["id", "title", "price", "description", "category", "image"]
}